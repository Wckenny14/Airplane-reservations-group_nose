<p id="notice"><%= notice %></p>

<h1>Flights Seats</h1>

<table>
  <thead>
    <tr>
      <th>Seat</th>
      <th>Flight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights_seats.each do |flights_seat| %>
      <tr>
        <td><%= flights_seat.seat_id %></td>
        <td><%= flights_seat.flight_id %></td>
        <td><%= link_to 'Show', flights_seat %></td>
        <td><%= link_to 'Edit', edit_flights_seat_path(flights_seat) %></td>
        <td><%= link_to 'Destroy', flights_seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

